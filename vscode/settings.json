// Ben's Visual Studio Code settings
// Place your settings in this file to overwrite the default settings
{
  "[html]": {
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.tabSize": 2
  },

  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": true,
  // Controls how the editor should render whitespace characters, possibilities are 'none', 'boundary', and 'all'. The 'boundary' option does not render single spaces between words.
  "editor.renderWhitespace": "none",
  // Controls how lines should wrap. Can be:
  //  - 'off' (disable wrapping),
  //  - 'on' (viewport wrapping),
  //  - 'wordWrapColumn' (wrap at `editor.wordWrapColumn`) or
  //  - 'bounded' (wrap at minimum of viewport and `editor.wordWrapColumn`).
  "editor.wordWrap": "on",

  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,

  // https://marketplace.visualstudio.com/items?itemName=donjayamanne.python
  // conda install flake8
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--ignore=E501,W503"
  ],

  "vim.disableAnnoyingGcMessage": true,
  "vim.disableAnnoyingNeovimMessage": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["f","d"],
      "after": ["<Esc>"]
    }
  ],

  "workbench.iconTheme": "vs-seti",
  "window.zoomLevel": 0
}
