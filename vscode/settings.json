{
    "[json]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": {
            "strings": "on"
        },
        "editor.suggest.insertMode": "replace"
    },
    "[markdown]": {
        "editor._comment": "https://code.visualstudio.com/docs/editor/intellisense , https://stackoverflow.com/a/41324717/2958070",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": {
            "comments": "on",
            "other": "on",
            "strings": "on"
        },
        "editor.suggest.insertMode": "replace",
        "editor.suggest.localityBonus": true,
        "editor.suggestSelection": "recentlyUsed"
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length",
        "100"
    ],
    "dart.previewFlutterUiGuides": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "[Miramare]": {
            "comments": "#c0c0c0"
        }
    },
    "editor.wordBasedSuggestions": true,
    "editor.wordWrap": "on",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "go.autocompleteUnimportedPackages": true,
    "go.formatTool": "goimports",
    "go.lintOnSave": "workspace",
    "go.lintTool": "golangci-lint",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "isort.args": [
        "--profile",
        "black"
    ],
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "outline.showVariables": false,
    "problems.defaultViewMode": "table",
    "python._comment": "brew install python3 black flake8 mypy",
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "python.formatting.provider": "none",
    "python.languageServer": "Pylance",
    "python.linting.enabled": false,
    // "python.linting.enabled": true,
    // "python.linting.flake8Args": [
    //     "--max-line-length=100",
    //     "--ignore=W503"
    // ],
    // "python.linting.flake8Enabled": true,
    // "python.linting.flake8Path": "/usr/local/bin/flake8",
    // "python.linting.mypyEnabled": true,
    // "python.linting.mypyEnabled._comment": "TODO: not working",
    // "python.linting.mypyPath": "/usr/local/bin/mypy",
    // "python.linting.pylintEnabled": false,
    "redhat.telemetry.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "swaggerViewer.previewInBrowser": true,
    "terminal.integrated.fontSize": 15,
    "window.commandCenter": true,
    "window.zoomLevel": 2,
    "workbench.colorCustomizations": {
        "[Miramare]": {
            "activityBar.foreground": "#87af87",
            "activityBar.inactiveForeground": "#e6dcac",
            "editorLineNumber.foreground": "#c0c0c0",
            "scrollbarSlider.background": "#928374"
        }
    },
    "workbench.colorTheme": "Miramare",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.sideBar.location": "right"
}