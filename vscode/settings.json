{
    // @bbkane's VS Code settings!
    // Repo: https://github.com/bbkane/dotfiles
    //
    // -- eamodio.gitlens
    //
    "gitlens.hovers.currentLine.over": "line",
    //
    // -- golang.go
    //
    "go.autocompleteUnimportedPackages": true,
    "go.useLanguageServer": true,
    //
    // -- oderwat.indent-rainbow
    //
    // For which languages indent-rainbow should be activated (if empty it means all).
    "indentRainbow.includedLanguages": [
        "html",
        "json",
        "xml",
        "yaml"
    ],
    //
    // -- ms-python.vscode-pylance
    // brew install python3 black flake8 mypy
    //
    // formatting
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.formatting.provider": "black",
    // ls
    "python.languageServer": "Pylance",
    // linting
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "ignore=W503"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    // TODO: why doesn't mypy work?
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "/usr/local/bin/mypy",
    "python.linting.pylintEnabled": false,
    // NOTE: overwrite this for venvs
    // "python.pythonPath": "${workspaceFolder}/venv/bin/python"
    "python.pythonPath": "/usr/local/bin/python3",
    //
    // -- General Editor settings
    //
    "[json]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[markdown]": {
        // https://stackoverflow.com/a/41324717/2958070
        // https://code.visualstudio.com/docs/editor/intellisense
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": true,
        // Controls how suggestions are pre-selected when showing the suggest list
        "editor.suggestSelection": "recentlyUsed",
        "editor.suggest.insertMode": "replace",
        // Controls whether sorting favours words that appear close to the cursor
        "editor.suggest.localityBonus": true,
        "editor.wordBasedSuggestons": true
    },
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    // taniarascia.new-moon-vscode
    "workbench.colorTheme": "Kimbie Dark",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "go.formatTool": "goimports",
    "sqltools.format": {
        "language": "sql",
        "linesBetweenQueries": "preserve"
    },
    "workbench.sideBar.location": "right",
    "window.zoomLevel": 1
}
