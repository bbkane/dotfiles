{
    "[json]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "[markdown]": {
        "editor._comment": "https://code.visualstudio.com/docs/editor/intellisense , https://stackoverflow.com/a/41324717/2958070",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false,
        "editor.quickSuggestions": {
            "comments": "on",
            "other": "on",
            "strings": "on"
        },
        "editor.suggest.insertMode": "replace",
        "editor.suggest.localityBonus": true,
        "editor.suggest.localityBonus._comment": "Controls whether sorting favours words that appear close to the cursor",
        "editor.suggestSelection": "recentlyUsed"
    },
    "dart.previewFlutterUiGuides": true,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "[Miramare]": {
            "comments": "#c0c0c0"
        }
    },
    "editor.wordWrap": "on",
    "files.eol": "\n",
    "files.trimTrailingWhitespace": true,
    "gitlens.hovers.currentLine.over": "line",
    "go.autocompleteUnimportedPackages": true,
    "go.formatTool": "goimports",
    "go.lintOnSave": "workspace",
    "go.lintTool": "golangci-lint",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "problems.defaultViewMode": "table",
    "python._comment": "brew install python3 black flake8 mypy",
    "python.defaultInterpreterPath": "/usr/local/bin/python3",
    "python.formatting.blackArgs": [
        "--line-length",
        "100"
    ],
    "python.formatting.blackPath": "/usr/local/bin/black",
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100",
        "--ignore=W503"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "/usr/local/bin/flake8",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyEnabled._comment": "TODO: not working",
    "python.linting.mypyPath": "/usr/local/bin/mypy",
    "python.linting.pylintEnabled": false,
    "redhat.telemetry.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",
    "swaggerViewer.previewInBrowser": true,
    "terminal.integrated.fontSize": 15,
    "window.commandCenter": true,
    "window.zoomLevel": 1,
    "workbench.colorCustomizations": {
        "[Miramare]": {
            "editorLineNumber.foreground": "#c0c0c0",
            "scrollbarSlider.background": "#928374"
        }
    },
    "workbench.colorTheme": "Visual Studio Light",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.sideBar.location": "right"
}
