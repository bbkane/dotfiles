[user]
	name = Benjamin Kane
[credential "https://github.com"]
	username = bbkane
[push]
	default = simple
[alias]
        # using a function mostly so I can pass --oneline as an argument when I want to
        lg = "!git log --graph --all --decorate --date=relative \"$@\""
	ls = ls-files
[color]
	ui = true

# This is primarily for setting user.email differently at work
[include]
	path = ~/.gitconfig.local
