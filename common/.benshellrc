#!/bin/zsh

echo ".benshellrc loaded"

# disable auto-directory changes
unsetopt AUTO_CD

# make compiling easier
go() {echo ""; clang++ -std=c++11 -lpthread "$1" -o "$1.out" && ./"$1.out";}
setedit() {alias edit="vim $1";}

# set my own theme
ZSH_THEME="lambdarobbyrussell"

#set today to the date
today=$(date +%y-%m-%d)

# mk and cd directory
function mkcd {
  if [ ! -n "$1" ]; then
    echo "Enter a directory name"
  elif [ -d $1 ]; then
    echo "\`$1' already exists"
  else
    mkdir $1 && cd $1
  fi
}

# let zsh help me
# for some reason, this isn't working on the tower
#unalias run-help
autoload run-help
HELPDIR=/usr/local/share/zsh/help

